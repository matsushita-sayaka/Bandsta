<h1>Post Something New!</h1>
<br><br>

<%= form_for @post, :html => { multipart: true } do |f| %>


  <div class="field">
    <%= f.label :file_name %><br />
    <ul class="file_post">
      <li class="file_post">
        <span class="btn btn-large btn-success btn-file">
          Choose File(s)
            <%= file_field_tag "images[]", type: :file, multiple: true, :class => "" %>
         </span>
      </li>
    </ul>
  </div>

<br>

  <div class="field">
    <%= f.label :Content %><br />
    <%= f.text_area :content, :class => "form-control my-form" %>
  </div>  

<br>
  <div class="actions">
    <%= f.submit "Post!", :class => "btn btn-default" %>
  </div>
<% end%>
